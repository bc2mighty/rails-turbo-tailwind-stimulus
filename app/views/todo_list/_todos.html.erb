<div class="col-span-4 p-10">
  <%= turbo_frame_tag "main_frame" do %>
    <p class="text-3xl mb-10">To-Do List</p>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Item Name
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <% @todo_lists.each do |todo_list| %>
                  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                      <%= todo_list.item %>
                    </th>
                    <td class="px-6 py-4">
                      <%= content_tag(
                            :a,
                            "Edit",
                            data: {
                              controller: "todo",
                              method: "update",
                              action: "click->todo#update",
                              item_id: todo_list.id,
                              item: todo_list.item
                            },
                            class: "edit-todo-item bg-gray-700 text-white rounded-sm hover:bg-gray-400 font-medium text-sm px-5 py-2.5 dark:bg-gray-600 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800 mr-10",
                          ) %>
                      <%= content_tag(
                            :a,
                            "Delete",
                            data: {
                              controller: "todo",
                              method: "update",
                              action: "click->todo#delete",
                              item_id: todo_list.id,
                              item: todo_list.item
                            },
                            class: "delete-todo-item bg-red-700 text-white rounded-sm hover:bg-red-900 font-medium text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800",
                            ) %>
                    </td>
                  </tr>
            <% end %>
            </tbody>
        </table>
    </div>
  <% end %>
</div>